section.section-keyvisual
  .wrapper
    h2.keyvisual-title A lifetime of discounts? It's Genius.
    p.keyvisual-text Get rewarded for your travels - unlock instant savings of 10% or more with a free Booking.com account
    .search-form-wrapper
      form.search-form
        label.input-wrap
          i.search-icon.fa-solid.fa-magnifying-glass
          input.keyword-input(name='keyword' type='text' placeholder='Tìm kiếm theo địa điểm')
        label.date-picker
          i.date-icon.fa-solid.fa-calendar-days
          input.date-picker-input.js-date-picker(name='checkin-date' type='text' placeholder='Checkin - checkout')

section.section-browse
  .wrapper
    .covid-notice
      i.fa-solid.fa-circle-info
      p Một số điểm lưu ý khi thuê phòng trong tình hình dịch covid-19.
      a.covid-notice-link(href="#") Xem thêm
    h2.section-title Browse by property type
    .product-list-wrapper
      ul.product-list.js-slider-01
        each i in Array(12)
          li.product-item
            a.product-link(href='/detail/')
              figure.product-image
